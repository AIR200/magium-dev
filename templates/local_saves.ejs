<script>
    function renameLocalStorageSave(save_key, save_name_id) {
        console.log("Renaming save", save_key);
        let save_name = document.getElementById(save_name_id).value;

        let data = JSON.parse(localStorage.getItem(save_key));
        data['name'] = save_name;
        localStorage.setItem(save_key, JSON.stringify(data));
    }
</script>
<div class="description">
    <div>
    This is the local saves menu. Select a savegame slot from below. 
    <br><br>
    Click Save: To save the game in the selected slot locally. 
    <br>
    Click Overwrite: To save a local save in the selected slot. Can overwrite an existing save.
    </div>
</div>
<div class="save-list-container" style="margin: auto;">
<div class="save-list">
    <% for (let i = 0; i < 9; i++) { %>
        <div class="save-entry">
            <span style="flex-grow: 1;">Slot <%= i %></span>
            <button 
            style="flex-grow: 1;"
            hx-on::before-request="saveGameToLocalStorage('save<%= i %>', 
            <% if (saveData[`save${i}`]) { %> <%= true %> <% } else { %> <%= false %> <% }%>)"
            hx-post
            hx-ext="submitlocalstorage"
            hx-target="#content"
            hx-swap="innerHTML"> 
                Save
            </button>
            <% if (saveData[`save${i}`]) { %>
                <button 
                    style="flex-grow: 1;"
                    hx-get="/"
                    hx-on::before-request="loadGameFromLocalStorage('save<%= i %>')"
                    hx-target="#content"
                    hx-swap="innerHTML"
                    hx-push-url="true"
                > 
                    Load
                </button>
                <!-- <% console.log(locals) %> -->
                <input class="save-name-input" style="flex-grow: 1;" type="text" 
                id="save_name_<%= i %>"
                value="<%= saveData[`save${i}`].name %>"
                hx-on::before-request="renameLocalStorageSave('save<%= i %>', 'save_name_<%= i %>')"
                hx-trigger='blur'
                hx-post
                hx-ext="submitlocalstorage"
                hx-target="#content"
                hx-swap="innerHTML"
                >
            <% } %>
        </div>
    <% }; %>
</div>
</div>
<div style="display:none">
    <h2 id="header" hx-swap-oob="true">
        SAVE/LOAD MENU
    </h2>
</div>
<div class="response">
    <button
        hx-get="/"
        hx-target="#content"
        hx-swap="innerHTML"
        hx-push-url="true"
    > 
        Return to game
    </button>
</div>
