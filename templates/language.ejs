<div class="main-menu">
    <% for (entry of Object.entries(locales)) { %>
        <div class="response">
            <button
                onClick="storeItem('locale','<%= entry[0] %>');window.location.reload()"
            > 
                <%= entry[1] %>
            </button>
        </div>
    <% } %>
    <div class="response">
        <button
            hx-get="/settings"
            hx-target="#content"
            hx-swap="innerHTML"
            hx-push-url="true"
        > 
            <%= backToSettingsText %>
        </button>
    </div>
</div>
<div style="display:none">
    <h2 id="header" hx-swap-oob="true">
        <%= languageSelectionText %>
    </h2>
</div>
