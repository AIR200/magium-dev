{
  "name": "magium-dev",
  "version": "1.0.0",
  "description": "Test app for a new Magium version",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start:server": "nodemon main.js",
    "startelectron": "electron .",
    "start": "electron-forge start",
