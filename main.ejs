<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Magium</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="icon" href="/images/magium.ico" type="image/x-icon">
    <script src="https://unpkg.com/htmx.org@2.0.2"></script>
    <script> 
        function storeItem(key,value) {
            document.cookie = key+"="+value;
        }
    </script>
  </head>
  <body>
    <main id="main">
        <div class="header">
          <button class="header-button" onclick="void(0)">MAIN MENU</button>
          <h2><%= header %></h2>
          <button class="header-button" onclick="void(0)">STATS</button>
        </div>
        <div class="content">
          <%- text %>
          <% responses.forEach(function(response){ %>
          
          <div class="response">
            <button onClick="<% for (const [key, value] of Object.entries(response.set_variables)) { %>document.cookie='<%= key %>=<%= value %>';<% } %>" hx-get="/scene/<%= response.target %>" hx-target="main" hx-swap="innerHTML"})"> <%= response.text %> </button>
            <% }); %>
          </div>
        </div>
        <div class="footer">
          <button class="footer-button" onclick="void(0)">Activate Night Mode</button>
          <p>Magium v0.1</p>
        </div>
    </main>
	<script src="main.js"></script>
  </body>
</html>
